{
  "name": "datetime-attribute",
  "version": "1.3.2",
  "description": "Generate datetime attributes for the <time> HTML element, following WHATWG and ISO8601 specs.",
  "type": "module",
  "sideEffects": false,
  "exports": "./src/index.js",
  "engines": {
    "node": ">=12.8"
  },
  "packageManager": "pnpm@8.6.11",
  "scripts": {
    "types": "tsc",
    "test": "vitest run",
    "test:types": "pnpm exec tsd",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "watch": "vitest watch",
    "build": "echo \"Nothing to build, this command is only here to please size-limit GitHub action\" && exit 0",
    "size": "size-limit",
    "lint": "pnpm exec eslint src/**/*.js tests/index.test.js",
    "lint-fix": "pnpm exec eslint src/**/*.js tests/index.test.js --fix"
  },
  "size-limit": [
    {
      "path": "src/index.js"
    }
  ],
  "files": [
    "CHANGELOG.md",
    "src/**/*.js",
    "types/**/*.d.ts"
  ],
  "types": "./types/index.d.ts",
  "keywords": [
    "time",
    "datetime",
    "attribute",
    "date",
    "duration",
    "iso8601"
  ],
  "homepage": "https://github.com/meduzen/datetime-attribute",
  "author": "Mehdi Merah",
  "license": "WTFPL",
  "repository": "https://github.com/meduzen/datetime-attribute.git",
  "bugs": {
    "url": "https://github.com/meduzen/datetime-attribute/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.0.1",
    "@vitest/coverage-v8": "^1.0.2",
    "@vitest/ui": "^1.0.2",
    "eslint": "^8.55.0",
    "size-limit": "^11.0.1",
    "tsd": "^0.30.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.2"
  },
  "pnpm": {
    "overrides": {
      "has": "npm:@nolyfill/has@latest"
    }
  }
}
